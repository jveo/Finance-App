<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.IncomeTaxCalculatorFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:text="Enter your salary down below"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:inputType="number"
        />


    <EditText
        android:id="@+id/salaryInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="@string/Salary"
        android:inputType="number"
        android:textAlignment="viewStart"
        />

    <Spinner
        android:id="@+id/spinnerProvince"
        android:layout_width="209dp"
        android:layout_height="45dp"
        android:layout_below="@+id/salaryInput"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="100dp" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerProvince"
        android:layout_marginTop="20dp"
        android:text="calculate" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="141dp"
        android:layout_height="43dp"
        android:layout_above="@+id/resultTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="1dp"
        android:text="&amp;\n Provincial Tax:"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="141dp"
        android:layout_height="43dp"
        android:layout_above="@+id/resultTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="44dp"
        android:text="Estimated Federal Tax:"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="3dp"
        android:textAlignment="center"
        android:textSize="@dimen/Titles" />

    <TextView
        android:id="@+id/estimatedProvTax"
        android:layout_width="213dp"
        android:layout_height="42dp"
        android:layout_above="@+id/resultTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="-1dp" />

    <TextView
        android:id="@+id/estimatedFedTax"
        android:layout_width="213dp"
        android:layout_height="43dp"
        android:layout_above="@+id/resultTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="42dp" />

</RelativeLayout>