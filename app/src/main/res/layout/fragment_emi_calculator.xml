<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jesseviauandroidtest.fragments.ContactFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:padding="10dp">


        <EditText
            android:id="@+id/loanAmountEditText"
            android:layout_width="389dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="#FFFFD8"
            android:hint="Loan Amount"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/InterestRateEditText"
            android:layout_width="393dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#FFFFD8"
            android:hint="Interest Rate"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/LoanTermEditText"
            android:layout_width="393dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:background="#FFFFD8"
            android:hint="Loan Term"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/blankbutton"
            android:layout_width="393dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="@string/Emi_calc"
            android:textAlignment="center"
            android:textSize="@dimen/SubTitles"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/emiCalculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/calculate"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="\tLoan Amount: "
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/LoanAmountResult"
                android:layout_width="335dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#FFFFD8"
                android:inputType="none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="\nEmi:"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/emiResult"
                android:layout_width="274dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#FFFFD8"
                android:inputType="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="Total Interest:"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/totalInterestResult"
                android:layout_width="394dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:background="#FFFFD8"
                android:inputType="none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="\nTerm:"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/termResult"
                android:layout_width="294dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:background="#FFFFD8"
                android:inputType="none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:text="Total Payment:"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/totalPaymentResult"
                android:layout_width="383dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:background="#FFFFD8"
                android:inputType="none" />

        </LinearLayout>



    </LinearLayout>


</LinearLayout>

